<h1 class="pb-4">Explore Random</h1>

<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="/" style="text-decoration: none;">Home</a></li>
      <li class="breadcrumb-item active" aria-current="page">Explore Random</li>
  </ol>
</nav>

<div class="row row-cols-2 row-cols-lg-5 g-2 g-lg-3">
  <% if(recipe != '') { %>
   
    <a href="/recipe/<%= recipe._id %>" class="col text-center category_link">
      <div class="category_img category_img--large shadow">
        <img src="/uploads/<%= recipe.image %>" alt="<%= recipe.name %>" loading="lazy">
      </div>
      <div class="pt-1"><%= recipe.name %></div>
    </a>
  
  <% } else { %>
    <p>No items found.</p>
  <% } %> 
</div>