<section class="section about-section gray-bg" id="about">
    <div class="container">
        <div class="row align-items-center flex-row-reverse">
            <div class="col-lg-6">
                <div class="about-text go-to">
                    <h3 class="dark-color"><%= user.name %>'s Profile</h3>
                    <!-- <% if(user && user.description ) {%> -->
                        <p><%= user.description %></p>
                    <!-- <% } else { %>
                        <p>I am a home baker. My passion is to design digital user experiences through the bold interface and meaningful interactions.</p>
                    <% } %> -->
                   
                    <div class="row about-list">
                        <div class="col-md-6">
                            <div class="media">
                                <label>Name</label>
                                <p><%= user.name %></p>
                            </div>
                            <div class="media">
                                <label>Since</label>
                                <p><%= user.createdAt.toDateString() %></p>
                            </div>
                        </div>
                       
                        <div class="col-md-6">
                            <div class="media">
                                <label>E-mail</label>
                                <p><%= user.email %></p>
                            </div>
                            <div class="media">
                                <label>Recipes</label>
                                <p><%= count %></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="about-avatar">
                    <% if(user && user.image ) {%>
                        <img src="/uploads/<%= user.image %>" alt="image" loading="lazy" width="300px" height="300px">
                    <% } else { %>
                        <img src="https://bootdey.com/img/Content/avatar/avatar7.png" title="avatar" alt="avatar">
                    <% } %>
                </div>
                <br/>
                <form method="post" action="/profile" enctype="multipart/form-data">

                    <label for="image"></label>
                    <input type="file" name="image" accept="image/*" required>

                    <button type="submit" class="btn btn-primary">Upload</button>    
                </form>
               
            </div>
        </div>
      
    </div>
</section>