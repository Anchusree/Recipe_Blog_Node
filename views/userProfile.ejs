<section class="section about-section gray-bg" id="about">
    <div class="container">
        <div class="row align-items-center flex-row-reverse">
            <div class="col-lg-6">
                <div class="about-text go-to">
                    <h3 class="dark-color">
                        <%= user.name %>'s Profile
                    </h3>
                    <% if(user && user.description ) {%>
                    <p>
                        <%= user.description %>
                    </p>
                    <% } else { %>
                        <p>I am a home baker. My passion is to design digital user experiences through the bold interface and meaningful interactions.</p>
                    <% } %>

                    <div class="row about-list">
                        <div class="col-md-6">
                            <div class="media">
                                <label>Name</label>
                                <p>
                                    <%= user.name %>
                                </p>
                            </div>
                            <div class="media">
                                <label>Since</label>
                                <p>
                                    <%= user.createdAt.toDateString() %>
                                </p>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="media">
                                <label>E-mail</label>
                                <p>
                                    <%= user.email %>
                                </p>
                            </div>
                            <div class="media">
                                <label>Recipes</label>
                                <p>
                                    <%= count %>&nbsp;
                                        <% if(count !='' && count> 0) { %>
                                            <i class="bi bi-eye-fill" onclick="showrecipe()"></i>
                                            <% } %>
                                                <!-- <button type="button" data-toggle="modal" data-target="#exampleModal"><i class="bi bi-eye-fill"></i></button> -->
                                </p>
                            </div>
                        </div>
                        <div id="mtable" style="display:none">
                            <div id="Grid">
                                <table class="table mt-5">
                                    <thead>
                                        <tr>
                                            <th scope="col">S.No</th>
                                            <th scope="col">Recipe</th>
                                            <th scope="col">Item</th>
                                            <th scope="col">Category</th>
                                            <th scope="col">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% if(recipe !='' ) { %>
                                            <% recipe.forEach(function(item,index){ %>
                                                <tr>
                                                    <td>
                                                        <%= index+1 %>
                                                    </td>
                                                    <td>
                                                        <img style="width:70px;height:70px"
                                                            src="/uploads/<%- item.image %>" alt="">
                                                    </td>
                                                    <td>
                                                        <%= item.name %>
                                                    </td>
                                                    <td>
                                                        <%= item.category %>
                                                    </td>

                                                    <td>
                                                        <button class="btn btn-warning"
                                                            onclick="viewList('<%= item._id %>')" data-bs-toggle="modal"
                                                            data-bs-target="#viewModal">
                                                            <i class="bi bi-view-list"></i>
                                                        </button>

                                                        <button class="btn btn-success" data-bs-toggle="modal"
                                                            data-bs-target="#editModal">
                                                            <i class="bi bi-pen"></i>
                                                        </button>

                                                        <button class="btn btn-danger"
                                                            onclick="removeList('<%= item._id %>')">
                                                            <i class="bi bi-trash"></i>
                                                        </button>
                                                        <div class="modal fade" id="editModal" tabindex="-1"
                                                            aria-labelledby="editModallabel" aria-hidden="true">
                                                            <div
                                                                class="modal-dialog modal-lg modal-dialog-centered modal-dialog-scrollable">
                                                                <div class="modal-content">
                                                                    <div class="modal-header">
                                                                        <h5 class="modal-title" id="editModallabel">Edit Your Recipe</h5>
                                                                        <button type="button" class="btn-close"
                                                                            data-bs-dismiss="modal"
                                                                            aria-label="Close"></button>
                                                                    </div>
                                                                    <div class="modal-body" id="modaleditbody">

                                                                        <div class="row justify-content-center">
                                                                            <form action="/editList/<%= item._id %>"
                                                                                method="post"
                                                                                enctype="multipart/form-data">
                                                                                <div class="row g-3">
                                                                                    <div class="col-6">
                                                                                        <label for="name" class="form-label">Recipe</label>
                                                                                        <input type="text"
                                                                                            name="name" id="name" 
                                                                                            class="form-control" value="<%= item.name %>"
                                                                                            autocomplete="off">
                                                                                    </div>

                                                                                    <div class="col-12">
                                                                                        <label for="description"
                                                                                            class="form-label">Description</label>
                                                                                        <textarea name="description"
                                                                                            placeholder="<%= item.description %>"
                                                                                            id="description"
                                                                                            class="form-control"
                                                                                            cols="30" rows="4"
                                                                                            autocomplete="off"></textarea>
                                                                                    </div>

                                                                                    <div class="col-12">
                                                                                        <label for="Ingredients"
                                                                                            class="form-label">Ingredients</label>
                                                                                        <input type="text"
                                                                                            name="ingredients"
                                                                                            id="ingredients"
                                                                                            class="form-control"
                                                                                            value="<%= item.ingredients%>"
                                                                                            autocomplete="off">

                                                                                    </div>

                                                                                    <div class="col-12">
                                                                                        <label for="instructions"
                                                                                            class="form-label">Instructions</label>
                                                                                        <textarea
                                                                                        placeholder="<%= item.instructions %>"
                                                                                            name="instructions"
                                                                                            id="instructions"
                                                                                            class="form-control"
                                                                                            cols="30"
                                                                                            rows="4"></textarea>
                                                                                    </div>
                                                                                    <div class="col-12">
                                                                                        <label for="category">Category</label>
                                                                                        <select
                                                                                            class="form-select form-control"
                                                                                            name="category"
                                                                                            aria-label="Category" value="<%= item.category %>">
                                                                                            <option selected><%= item.category %></option>
                                                                                            <option value="Thai">
                                                                                                Thai</option>
                                                                                            <option
                                                                                                value="American">
                                                                                                American</option>
                                                                                            <option
                                                                                                value="Chineese">
                                                                                                Chineese</option>
                                                                                            <option value="Mexican">
                                                                                                Mexican</option>
                                                                                            <option value="Indian">
                                                                                                Indian</option>
                                                                                            <option value="Indian">
                                                                                                Italian</option>
                                                                                        </select>
                                                                                    </div>
                                                                                    <div class="col-12">
                                                                                        <label for="image">Image</label>
                                                                                        <div class='col-md-2'>
                                                                                            <img src="/uploads/<%= item.image %>" alt="image" loading="lazy" width="80px" height="80px">
                                                                                        </div>
                                                                                        <input type="file"
                                                                                            class="form-control"
                                                                                            name="image"
                                                                                            accept="image/*">
                                                                                    </div>

                                                                                    <div class="col-12">
                                                                                        <button type="submit"
                                                                                            class="btn btn-primary"
                                                                                            id="editsubmit">Edit</button>
                                                                                    </div>
                                                                                </div>
                                                                            </form>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </td>
                                                </tr>
                                                <% }) %>

                                                    <% } %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-6">
                <div class="about-avatar">
                    <% if(user && user.image ) {%>
                        <img src="/uploads/<%= user.image %>" alt="image" loading="lazy" width="300px" height="300px">
                        <% } else { %>
                            <img src="https://bootdey.com/img/Content/avatar/avatar7.png" title="avatar" alt="avatar">
                            <% } %>
                </div>
                <br />
                <form method="post" action="/profile" enctype="multipart/form-data">

                    <label for="image"></label>
                    <input type="file" name="image" accept="image/*" required>
                    <button type="submit" class="btn btn-primary">Upload</button>
                </form>

            </div>
        </div>

    </div>
</section>

<div class="modal fade" id="viewModal" tabindex="-1" aria-labelledby="viewModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="viewModalLabel">View Recipe</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="modalviewbody">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<script>
    function showrecipe() {
        document.getElementById("mtable").style.display = "block";
    }
    function viewList(id) {
        $.ajax({
            url: '/viewList/' + id,
            method: 'get',
            success: (response) => {
                if (response.status) {
                    var html = '';
                    if (response.result.length > 0) {
                        html += `
                        <div class='container'>
                            <div class='row'>
                                <div class='col-md-8'>
                                    <h4 class='resulttitle'>Recipe ID: <span class='resultspan'>`+ response.result[0]._id + `</span></h4>
                                    <h4 class='resulttitle'>Item: <span class='resultspan'>`+ response.result[0].name + `</span></h4>
                                    <h4 class='resulttitle'>Description: <span class='resultspan'>`+ response.result[0].description + `</span></h4>
                                    <h4 class='resulttitle'>Category: <span class='resultspan'>`+ response.result[0].category + `</span> </h4>
                                    <h4 class='resulttitle'>Ingredients: <span class='resultspan'>`+ response.result[0].ingredients.join(',') + `</span></h4>
                                    <h4 class='resulttitle'>Instructions: <span class='resultspan'>`+ response.result[0].instructions + `</span></h4>
                                </div>
                                <div class='col-md-2'>
                                    <img src="/uploads/`+ response.result[0].image + `" alt="image" loading="lazy" width="200px" height="200px">
                                </div>
                            </div>
                        </div>
                        `;
                    }

                    $('#modalviewbody').html(html);


                }
                else {
                    alert("Something went wrong")
                }
            }

        })
    }
    function removeList(id) {

        $.ajax({
            url: '/deleteList/' + id,
            method: 'delete',
            success: (response) => {
                if (response.status) {
                    location.reload()
                }
                else {
                    alert("Something went wrong")
                }
            }
        })

    }
</script>